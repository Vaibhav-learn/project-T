#:kivy 2.0.0
#:import get_color_from_hex kivy.utils.get_color_from_hex

<AddEditAddressScreen>:
    name: 'add_edit_address'
    md_bg_color: 1, 1, 1, 1
    MDBoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0

        MDTopAppBar:
            title: "Address"
            elevation: 0
            md_bg_color: 1, 1, 1, 1
            specific_text_color: 0, 0, 0, 1
            left_action_items: [["arrow-left", lambda x: setattr(root.manager, 'current', 'saved_addresses')]]
            right_action_items: [["shopping-outline", lambda x: print("Cart pressed")]]

        Widget:
            size_hint_y: None
            height: '12dp'

        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                padding: '24dp', 0, '24dp', 0
                spacing: '18dp'
                size_hint_y: None
                height: self.minimum_height

                MDTextField:
                    id: first_name
                    hint_text: 'First Name'
                    mode: 'line'
                    size_hint_y: None
                    height: '48dp'
                MDTextField:
                    id: last_name
                    hint_text: 'Last Name'
                    mode: 'line'
                    size_hint_y: None
                    height: '48dp'
                MDTextField:
                    id: mobile_number
                    hint_text: 'Mobile Number'
                    mode: 'line'
                    size_hint_y: None
                    height: '48dp'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: '16dp'
                    size_hint_y: None
                    height: '48dp'
                    MDTextField:
                        id: pincode
                        hint_text: 'Pincode'
                        mode: 'line'
                        size_hint_y: None
                        height: '48dp'
                    MDTextField:
                        id: state
                        hint_text: 'State'
                        mode: 'line'
                        size_hint_y: None
                        height: '48dp'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: '16dp'
                    size_hint_y: None
                    height: '48dp'
                    MDTextField:
                        id: city
                        hint_text: 'City'
                        mode: 'line'
                        size_hint_y: None
                        height: '48dp'
                MDTextField:
                    id: country
                    hint_text: 'Country'
                    mode: 'line'
                    size_hint_y: None
                    height: '48dp'

                MDTextField:
                    id: house
                    hint_text: 'House No.  , Building Name'
                    mode: 'line'
                    size_hint_y: None
                    height: '48dp'
                MDTextField:
                    id: road
                    hint_text: 'Road name,Area, Colony'
                    mode: 'line'
                    size_hint_y: None
                    height: '48dp'

        MDFillRoundFlatButton:
            text: 'Save'
            md_bg_color: get_color_from_hex("#61B15A")
            text_color: 1, 1, 1, 1
            size_hint_x: 0.9
            pos_hint: {'center_x': 0.5}
            height: '48dp'
            on_release: root.save_address() 
        Widget:
            size_hint_y: None
            height: '20dp'
