#:kivy 2.0.0

<FAQCategoryDetailScreen>:
    name: 'faq_category_detail'
    md_bg_color: 1, 1, 1, 1
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: root.category_title
            elevation: 0
            md_bg_color: 1, 1, 1, 1
            specific_text_color: 0, 0, 0, 1
            left_action_items: [["arrow-left", lambda x: root.go_back()]]
        ScrollView:
            MDBoxLayout:
                id: panel_box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: "8dp"
                spacing: "8dp" 