#:kivy 2.0.0

<SearchScreen>:
    name: 'search'
    md_bg_color: 1, 1, 1, 1

    MDBoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0

        # Top bar with search
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '56dp'
            padding: '8dp', '0dp', '8dp', '0dp'
            spacing: '8dp'
            MDIconButton:
                icon: 'arrow-left'
                user_font_size: '28sp'
                pos_hint: {'center_y': 0.5}
                on_release: root.go_back()
            TextInput:
                id: search_input
                hint_text: 'Search for products.'
                background_color: 0,0,0,0
                foreground_color: 0,0,0,1
                font_size: '16sp'
                padding: '8dp', '10dp'
                multiline: False
                size_hint_x: 1
            MDIconButton:
                icon: 'magnify'
                user_font_size: '24sp'
                pos_hint: {'center_y': 0.5}
                on_release: root.show_results()

        MDLabel:
            text: 'Recent Searches'
            font_size: '15sp'
            color: 0.5, 0.5, 0.5, 1
            bold: True
            size_hint_y: None
            height: self.texture_size[1] + dp(12)
            md_bg_color: 0.95, 0.95, 0.97, 1
            padding_x: '16dp'

        ScrollView:
            MDList:
                id: recent_list

        