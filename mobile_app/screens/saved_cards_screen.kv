#:kivy 2.0.0
#:import get_color_from_hex kivy.utils.get_color_from_hex

<SavedCardsScreen>:
    name: 'saved_cards'
    md_bg_color: 1, 1, 1, 1

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Saved Card"
            elevation: 0
            md_bg_color: 1, 1, 1, 1
            specific_text_color: 0, 0, 0, 1
            left_action_items: [["arrow-left", lambda x: setattr(root.manager, 'current', 'profile')]]
            right_action_items: [["shopping-outline", lambda x: print("Cart pressed")]]

        ScrollView:
            MDBoxLayout:
                id: card_container
                orientation: 'vertical'
                adaptive_height: True
                padding: "16dp"
                spacing: "16dp"

        MDBoxLayout:
            adaptive_height: True
            padding: "16dp"
            MDFillRoundFlatButton:
                id: add_button
                text: "Add"
                icon: 'plus'
                pos_hint: {'center_x': 0.5}
                on_release: setattr(root.manager, 'current', 'add_card')
                md_bg_color: get_color_from_hex("#61B15A")
                text_color: 1, 1, 1, 1
                size_hint_x: 0.9
                height: "48dp" 