#:kivy 2.0.0
#:import get_color_from_hex kivy.utils.get_color_from_hex

<NotificationScreen>:
    name: 'notification'
    md_bg_color: 1, 1, 1, 1
    MDBoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0

        MDTopAppBar:
            title: "Notification"
            elevation: 0
            md_bg_color: 1, 1, 1, 1
            specific_text_color: 0, 0, 0, 1
            left_action_items: [["arrow-left", lambda x: root.go_back()]]
            right_action_items: [["shopping-outline", lambda x: print("Cart pressed")]]

        Widget:
            size_hint_y: None
            height: '40dp'

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: 0, '24dp', 0, 0
            spacing: '12dp'
            pos_hint: {'center_x': 0.5}

            MDIcon:
                icon: 'bell-outline'
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: .8, .8, .8, 1
                font_size: '96sp'
                pos_hint: {'center_x': 0.5}

            MDLabel:
                text: 'NO NEW NOTIFICATIONS'
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: .6, .6, .6, 1
                font_style: 'Subtitle1'
                bold: True
                size_hint_y: None
                height: self.texture_size[1]

            MDLabel:
                text: 'You will be updated with the new launches and latest offers over here!'
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: .7, .7, .7, 1
                font_style: 'Caption'
                size_hint_y: None
                height: self.texture_size[1]

        Widget:
            size_hint_y: 1
        MDFillRoundFlatButton:
            text: 'Start Shopping'
            md_bg_color: get_color_from_hex("#61B15A")
            text_color: 1, 1, 1, 1
            size_hint_x: 0.9
            pos_hint: {'center_x': 0.5}
            height: '48dp'
            on_release: root.go_to_home()
        Widget:
            size_hint_y: None
            height: '20dp' 