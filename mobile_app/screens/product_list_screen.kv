#:kivy 2.0.0
#:import ProductCard widgets.product_card.ProductCard

<ProductListScreen>:
    name: 'product_list'
    md_bg_color: 0.98, 0.98, 0.98, 1

    MDBoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0

        # Top bar
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '56dp'
            padding: '8dp', '0dp', '8dp', '0dp'
            spacing: '8dp'
            MDIconButton:
                icon: 'arrow-left'
                user_font_size: '28sp'
                pos_hint: {'center_y': 0.5}
                on_release: app.root.current = 'home'
            MDLabel:
                text: 'All Products'
                font_size: '20sp'
                bold: True
                color: 0.1, 0.1, 0.1, 1
                size_hint_x: 1
                valign: 'middle'
            MDIconButton:
                icon: 'shopping-outline'
                user_font_size: '24sp'
                pos_hint: {'center_y': 0.5}
                on_release: app.show_cart() if hasattr(app, 'show_cart') else None

        # Product Grid
        ScrollView:
            do_scroll_x: False
            MDGridLayout:
                id: product_grid
                cols: 2
                spacing: '8dp'
                padding: '8dp', '8dp', '8dp', '8dp'
                size_hint_y: None
                height: self.minimum_height 